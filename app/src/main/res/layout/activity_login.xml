<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="a.b.c.LoginActivity">


    <Button
        android:id="@+id/button_register"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageButton_login"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="13dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back_arrow_white_normal"
        />

    <TextView
        android:id="@+id/tv_blank3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/imageButton_login"/>

    <ImageView
        android:id="@+id/imageView_login"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tv_blank3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/tv_blank4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView_login"/>

    <EditText
        android:id="@+id/editText_phonenumber_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_blank4"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColorHint="#dedede"
        android:hint="手机号码"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/tv_blank1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/editText_phonenumber_login"/>

    <EditText
        android:id="@+id/editText_password_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColorHint="#dedede"
        android:layout_alignLeft="@+id/editText_phonenumber_login"
        android:layout_alignStart="@+id/editText_phonenumber_login"
        android:layout_below="@+id/tv_blank1"
        android:hint="密码"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_blank"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/editText_password_login"/>

    <a.b.view.OvalButton
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:bordercolor="0xFFFFFFFF"
        app:bordersize="5"
        android:text="登录"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_below="@+id/tv_blank"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:id="@+id/ovalButton_login" />
    <TextView
        android:id="@+id/tv_blank2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/ovalButton_login"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码 ?"
        android:id="@+id/button_forgetpwd_login"
        android:layout_below="@+id/tv_blank2"
        android:layout_centerHorizontal="true"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textColor="#ffffff" />

</RelativeLayout>
